{
  "kind": "DeploymentConfig",
  "apiVersion": "v1",
  "metadata": {
    "name": "redis"
  },
  "spec": {
    "template": {
      "metadata": {
        "labels": {
          "name": "redis",
          "redis-sentinel": "true"
        }
      },
      "spec": {
        "containers": [{
            "name": "redis",
            "image": " ",
            "imagePullPolicy": "IfNotPresent",
            "ports": [{
              "containerPort": 6379,
              "protocol": "TCP"
            }],
            "volumeMounts": [{
              "mountPath": "/redis-master-data",
              "name": "redis-data"
            }]
          },
          {
            "name": "redis-sentinel",
            "image": " ",
            "imagePullPolicy": "IfNotPresent",
            "env": [
              {
                "name": "SENTINEL",
                "value": "true"
              }
            ],
            "ports": [{
              "containerPort": 26379,
              "protocol": "TCP"
            }],
            "volumeMounts": [{
              "mountPath": "/redis-sentinel-data",
              "name": "redis-sentinel-data"
            }]
          }
        ],
        "volumes": [
          {
            "name": "redis-data",
            "persistentVolumeClaim": {
              "claimName": "redis-pvc"
            }
          },
          {
            "name": "redis-sentinel-data",
            "persistentVolumeClaim": {
              "claimName": "redis-sentinel-pvc"
            }
          }
        ],
        "dnsPolicy": "ClusterFirst"
      }
    },
    "replicas": 1,
    "selector": {
      "name": "redis"
    },
    "triggers": [{
        "type": "ConfigChange"
      },
      {
        "type": "ImageChange",
        "imageChangeParams": {
          "automatic": true,
          "containerNames": [
            "redis",
            "redis-sentinel"
          ],
          "from": {
            "kind": "ImageStreamTag",
            "name": "redis-sentinel:latest"
          }
        }
      }
    ],
    "strategy": {
      "type": "Recreate"
    }
  }
}
